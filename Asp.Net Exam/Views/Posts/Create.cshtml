@using Microsoft.AspNet.Identity;
@using testAsp.Pages.Posts
@model formPost
@{
}
<h2>New posts</h2>
<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" asp-for="title">Title</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="title" value="" asp-for="title"/>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" asp-for="description">Description</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="description" value="" asp-for="description"/>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" asp-for="image">Image</label>
        <div class="col-sm-6">
            <input type="file" class="form-control" name="image" accept="image/*" value="" asp-for="image"/>
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-sm-3 col col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary" >Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class='btn btn-outline-primary' asp-area="" asp-controller="Posts" asp-action="Index">Cancel</a>
        </div>
    </div>
</form>